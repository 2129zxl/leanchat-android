<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatRecordLayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chatBottomHeight">

    <com.avoscloud.chat.ui.view.RecordButton
        android:id="@+id/recordBtn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/pressToRecord" />

    <ImageButton
        android:id="@+id/turnToTextBtn"
        android:layout_width="@dimen/chatBottomBtnSize"
        android:layout_height="@dimen/chatBottomBtnSize"
        android:layout_gravity="center_vertical"
        android:background="@drawable/btn_keyboard"
        android:src="@null" />
</LinearLayout>