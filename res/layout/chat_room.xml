<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f9f9f9">

    <include layout="@layout/header" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottomLayout"
        android:cacheColorHint="#0000"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:layout_below="@+id/headerLayout"
        android:scrollbarStyle="outsideOverlay"
        android:stackFromBottom="true" />

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chatBottomHeight"
        android:background="@drawable/home_bg_bottombar"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/chatBottomLeftLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/addImageBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/btn_chat_add_picture_selector"
                android:background="@null" />
        </RelativeLayout>

        <include layout="@layout/chat_text_layout" />

        <include layout="@layout/chat_record_layout" />
    </LinearLayout>
</RelativeLayout>